<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iem.pokecards.view.MenuActivity">

    <Button
        android:id="@+id/buttonUserList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Ma liste de Pokemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAllPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="43dp"
        android:text="Tous les PokÃ©mons"
        app:layout_constraintStart_toStartOf="@+id/buttonUserList"
        app:layout_constraintTop_toBottomOf="@+id/buttonUserList" />

    <Button
        android:id="@+id/buttonBooster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="33dp"
        android:text="Acheter booster"
        app:layout_constraintStart_toStartOf="@+id/buttonAllPokemon"
        app:layout_constraintTop_toBottomOf="@+id/buttonAllPokemon" />

    <Button
        android:id="@+id/buttonEchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="34dp"
        android:text="Echanger"
        app:layout_constraintEnd_toEndOf="@+id/buttonBooster"
        app:layout_constraintTop_toBottomOf="@+id/buttonBooster" />
</android.support.constraint.ConstraintLayout>
