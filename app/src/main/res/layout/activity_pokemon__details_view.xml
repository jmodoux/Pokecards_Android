<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iem.pokecards.Pokemon_DetailsView"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/buttonEvolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evoluer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/detail_sprite"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/textView_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/detail_sprite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>


    <TextView
        android:id="@+id/textView_ID"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="N° Pokedex"
        app:layout_constraintTop_toBottomOf="@id/textView_Name"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView_NumPokedex"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textView_Name"
        app:layout_constraintStart_toEndOf="@id/textView_ID"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textView_Generation"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Génération"
        app:layout_constraintTop_toBottomOf="@id/textView_ID"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView_Generation_Result"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textView_ID"
        app:layout_constraintStart_toEndOf="@id/textView_Generation"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textView_Types"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Type"
        app:layout_constraintTop_toBottomOf="@id/textView_Generation"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView_Types_Result"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Normal-Vol"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textView_Generation"
        app:layout_constraintStart_toEndOf="@id/textView_Types"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textView_Iteration"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Itération"
        app:layout_constraintTop_toBottomOf="@id/textView_Name"
        app:layout_constraintStart_toEndOf="@id/textView_NumPokedex"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView_Iteration_Result"
        android:layout_width="98dp"
        android:layout_height="19dp"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textView_Name"
        app:layout_constraintStart_toEndOf="@id/textView_Iteration"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView_Height"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Taille"
        app:layout_constraintTop_toBottomOf="@id/textView_Iteration"
        app:layout_constraintStart_toEndOf="@id/textView_Generation_Result"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView_Height_Result"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="125cm"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textView_Iteration_Result"
        app:layout_constraintStart_toEndOf="@id/textView_Iteration"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView_Weight"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Poids"
        app:layout_constraintTop_toBottomOf="@id/textView_Height"
        app:layout_constraintStart_toEndOf="@id/textView_Types_Result"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView_Weight_Result"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0.2 Kg"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textView_Height_Result"
        app:layout_constraintStart_toEndOf="@id/textView_Weight"
        android:layout_marginTop="10dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_Types">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>
