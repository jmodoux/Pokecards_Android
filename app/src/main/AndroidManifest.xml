        <activity android:name=".view.fragment.PokemonExchangeListFragment" />
        <activity android:name=".view.fragment.PokemonExchangeNewFragment" />
        <activity android:name=".view.adapter.PokemonExchangeAdapter" />
        <activity android:name=".view.MainActivity"></activity>
